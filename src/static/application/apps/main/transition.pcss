.enter {
  opacity: 0.5;
  transform: translateY(20px);
  &.enterActive {
    opacity: 1;
    transform: translateY(0);
    transition: all 400ms ease;
  }
}

.appear {
  opacity: 0.5;
  transform: translateY(20px);
  &.appearActive {
    opacity: 1;
    transform: translateY(0);
    transition: all 600ms ease;
  }
}

.leave {
  opacity: 1;
  transform: translateY(0);
  &.leaveActive {
    opacity: 0;
    transform: translateY(-20px);
    transition: all 400ms ease;
  }
}
