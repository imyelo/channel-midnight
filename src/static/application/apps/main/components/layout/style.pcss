.view {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.main {
  background-color: #262626;
  box-shadow: 0 4px 12px 4px rgba(38,38,38,0.5);
  transition: all 400ms ease;
  overflow-x: hidden;
  overflow-y: scroll;
}
